{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "CreateAndConfigureTutorialBucket",
      "Effect": "Allow",
      "Action": [
        "s3:CreateBucket",
        "s3:Get*",
        "s3:GetBucket*",
        "s3:GetBucketPolicy",
        "s3:PutBucketPolicy",
        "s3:GetBucketPublicAccessBlock",
        "s3:PutBucketPublicAccessBlock",
        "s3:GetBucketOwnershipControls",
        "s3:PutBucketOwnershipControls",
        "s3:GetBucketVersioning",
        "s3:PutBucketVersioning",
        "s3:GetEncryptionConfiguration",
        "s3:PutEncryptionConfiguration",
        "s3:GetBucketTagging",
        "s3:PutBucketTagging",
        "s3:GetBucketAcl"
      ],
      "Resource": "arn:aws:s3:::titanic-data-bucket-939122281183-data-science-user"
    },
    {
      "Sid": "ListTutorialBucket",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetBucketLocation"
      ],
      "Resource": "arn:aws:s3:::titanic-data-bucket-939122281183-data-science-user"
    },
    {
      "Sid": "ReadWriteTutorialBucketObjects",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject"
      ],
      "Resource": "arn:aws:s3:::titanic-data-bucket-939122281183-data-science-user/*"
    }
  ]
}
