{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "PassOnlyProjectServiceRoles",
      "Effect": "Allow",
      "Action": "iam:PassRole",
      "Resource": [
        "arn:aws:iam::<ACCOUNT_ID>:role/titanic-sagemaker-sagemaker-execution-*",
        "arn:aws:iam::<ACCOUNT_ID>:role/titanic-sagemaker-stepfunctions-*",
        "arn:aws:iam::<ACCOUNT_ID>:role/titanic-sagemaker-lambda-*",
        "arn:aws:iam::<ACCOUNT_ID>:role/titanic-sagemaker-ecs-task-*",
        "arn:aws:iam::<ACCOUNT_ID>:role/titanic-sagemaker-eventbridge-*",
        "arn:aws:iam::<ACCOUNT_ID>:role/titanic-sagemaker-scheduler-*"
      ],
      "Condition": {
        "StringEquals": {
          "iam:PassedToService": [
            "sagemaker.amazonaws.com",
            "states.amazonaws.com",
            "lambda.amazonaws.com",
            "ecs-tasks.amazonaws.com",
            "events.amazonaws.com",
            "scheduler.amazonaws.com"
          ]
        }
      }
    }
  ]
}
